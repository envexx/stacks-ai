{
  "name": "stacksai-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "Pay-per-prompt AI Gateway on Stacks blockchain",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "gateway:dev": "pnpm --filter gateway dev",
    "web:dev": "pnpm --filter web-demo dev",
    "sdk:build": "pnpm --filter sdk build"
  },
  "devDependencies": {
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
